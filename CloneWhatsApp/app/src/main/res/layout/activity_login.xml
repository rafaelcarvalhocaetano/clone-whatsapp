<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimary">    <ImageView        android:id="@+id/imageView"        android:layout_width="@dimen/largura_logo"        android:layout_height="@dimen/altura_logo"        android:layout_alignParentEnd="true"        android:layout_alignParentRight="true"        android:layout_alignParentTop="true"        android:layout_marginEnd="82dp"        android:layout_marginRight="82dp"        android:layout_marginTop="23dp"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:srcCompat="@drawable/logo"        tools:layout_editor_absoluteY="0dp" />    <EditText        android:id="@+id/edit_nome"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/imageView"        android:layout_centerHorizontal="true"        android:layout_marginTop="40dp"        android:ems="10"        android:hint="Digite seu Nome"        android:inputType="textPersonName"        android:textColor="@color/textColorPrimary" />    <EditText        android:id="@+id/edit_cod_pais"        android:layout_width="50dp"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_below="@+id/edit_nome"        android:layout_marginLeft="12dp"        android:layout_marginStart="12dp"        android:layout_marginTop="25dp"        android:ems="10"        android:hint="+55"        android:inputType="number"        android:textColor="@color/textColorPrimary" />    <EditText        android:id="@+id/edit_cod_area"        android:layout_width="53dp"        android:layout_height="wrap_content"        android:layout_alignBaseline="@+id/edit_cod_pais"        android:layout_alignBottom="@+id/edit_cod_pais"        android:layout_toEndOf="@+id/edit_cod_pais"        android:layout_toRightOf="@+id/edit_cod_pais"        android:ems="10"        android:hint="11"        android:inputType="number"        android:textAlignment="center"        android:textColor="@color/textColorPrimary" />    <EditText        android:id="@+id/edit_telefone"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignBaseline="@+id/edit_cod_area"        android:layout_alignBottom="@+id/edit_cod_area"        android:layout_toEndOf="@+id/edit_cod_area"        android:layout_toRightOf="@+id/edit_cod_area"        android:ems="10"        android:hint="988776655"        android:inputType="number"        android:textColor="@color/textColorPrimary" />    <Button        android:id="@+id/btn_cadastrar"        android:layout_width="330dp"        android:layout_height="wrap_content"        android:layout_below="@+id/edit_cod_pais"        android:layout_centerHorizontal="true"        android:layout_marginTop="62dp"        android:background="@color/colorPrimaryDark"        android:text="Cadastrar" /></RelativeLayout>