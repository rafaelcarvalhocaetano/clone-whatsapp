<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimary">    <ImageView        android:id="@+id/imageView2"        android:layout_width="@dimen/altura_logo"        android:layout_height="@dimen/altura_logo"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:layout_marginTop="14dp"        app:srcCompat="@drawable/logo" />    <TextView        android:id="@+id/textView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/imageView2"        android:layout_centerHorizontal="true"        android:layout_marginTop="33dp"        android:text="Validação"        android:textColor="@color/textColorPrimary"        android:textSize="@dimen/validador"        android:textStyle="bold" />    <TextView        android:id="@+id/textView2"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_below="@+id/textView"        android:layout_marginTop="13dp"        android:text="recebeu um SMS para validação do seu número, digite o código de validação abaixo."        android:textAlignment="center"        android:textColor="@color/textColorPrimary" />    <EditText        android:id="@+id/edit_codigo"        android:layout_width="150dp"        android:layout_height="wrap_content"        android:layout_below="@+id/textView2"        android:layout_centerHorizontal="true"        android:layout_marginTop="52dp"        android:ems="10"        android:hint="Digite o Código"        android:inputType="number"        android:textAlignment="center"        android:textColor="@color/textColorPrimary" />    <Button        android:id="@+id/button2"        android:layout_width="@dimen/btn_largura"        android:layout_height="wrap_content"        android:layout_below="@+id/edit_codigo"        android:layout_centerHorizontal="true"        android:layout_marginTop="41dp"        android:text="@string/btn_validar" /></RelativeLayout>